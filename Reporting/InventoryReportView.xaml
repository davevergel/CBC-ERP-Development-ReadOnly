<UserControl x:Class="CbcRoastersErp.Views.Reporting.InventoryReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CbcRoastersErp.Views.Reporting"
	         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:syncfusion="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF"
             xmlns:reporting="clr-namespace:CbcRoastersErp.ViewModels.Reporting" d:DataContext="{d:DesignInstance Type=reporting:InventoryReportViewModel}"
             mc:Ignorable="d"
             Background="{DynamicResource BackgroundBrush}"
             d:DesignHeight="800" d:DesignWidth="1000">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <!-- Branding Header -->
        <DockPanel Grid.Row="0" Margin="0 0 0 20">
            <Image Source="/Views/CBC_Logo_500x500.png"
                   Width="50"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   DockPanel.Dock="Left"/>
            <TextBlock Text="Inventory Report Viewer"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Style="{StaticResource Heading1TextBlock}"
                   Margin="0,0,0,10" />
        </DockPanel>

        <!-- Controls -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,10" HorizontalAlignment="Left">
            <ComboBox Width="200"
                      Margin="0,0,10,0"
                      ItemsSource="{Binding AvailableReports}"
                      SelectedItem="{Binding SelectedReport}" />

            <Button Content="Load Report"
                    Width="120"
                    Margin="0,0,10,0"
                    Command="{Binding LoadReportCommand}"
		            Style="{StaticResource PrimaryButton}" />

            <Button Content="Back"
                    Width="80"
                    Command="{Binding NavigateBackCommand}" 
		            Style="{StaticResource PrimaryButton}"
                    Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Syncfusion PDF Viewer -->
        <syncfusion:PdfViewerControl x:Name="PdfViewer" />
        


    </Grid>
</UserControl>