<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 🎨 Brand Colors (Dark Mode) -->
    <Color x:Key="BrandPrimaryColor">#A1887F</Color>
    <Color x:Key="BrandSecondaryColor">#BCAAA4</Color>
    <Color x:Key="BrandAccentColor">#81C784</Color>
    <Color x:Key="BrandBackgroundColor">#303030</Color>
    <Color x:Key="BrandSurfaceColor">#424242</Color>

    <!-- SolidColorBrushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource BrandPrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource BrandSecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource BrandAccentColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BrandBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource BrandSurfaceColor}"/>
    <SolidColorBrush x:Key="GrayBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="BorderBackgroundBrush" Color="#FF2A2421"/>
    <!-- Espresso-tinted surface -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BrandAccentColor}"/>
    <!-- Green border -->

    <!-- 🔤 Typography -->
    <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>

    <!-- Headings and Text Styles -->
    <Style x:Key="Heading1TextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="Heading2TextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource SurfaceBrush}"/>
    </Style>

    <Style x:Key="Heading3TextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style x:Key="HeadingTotalTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>  

    <Style x:Key="BodyTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="CaptionTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <!-- 🧩 Buttons -->
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Padding" Value="10 5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style TargetType="Button" x:Key="SecondaryButton">
        <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Padding" Value="10 5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- ComboBox-->
    <Style x:Key="BrandedComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>


    <!-- DatePicker -->
    <Style x:Key="BrandedDatePicker" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignDatePicker}">
        <Setter Property="Foreground" Value="white" />
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>


    <!-- 🗂️ DataGrid -->
    <Style TargetType="DataGrid" x:Key="BrandDataGrid">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="RowBackground" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="Foreground" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="VerticalGridLinesBrush" Value="{StaticResource PrimaryBrush}"/>
    </Style>
    
    <!-- Group Box -->
    <Style TargetType="GroupBox" x:Key="BrandedGroupBox">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="0 0 0 20"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" 
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="white"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Border -->
    <Style TargetType="Border" x:Key="BrandedBorder">
        <Setter Property="Background" Value="{StaticResource BorderBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- 🗂️ TabControl -->
    <Style TargetType="TabControl" x:Key="BrandTabControl">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- 🗂️ TabItem -->
    <Style TargetType="TabItem" x:Key="BrandedTabItem">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="#DDDDDD" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Background" Value="#332C28" />
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"
                        Padding="{TemplateBinding Padding}"
                        Margin="{TemplateBinding Margin}">
                        <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentBrush}" />
                            <Setter Property="Foreground" Value="#111" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#666"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
