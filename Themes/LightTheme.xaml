<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 🎨 Brand Colors (Light Mode) -->
    <Color x:Key="BrandPrimaryColor">#6B4C3B</Color>
    <!-- Deep espresso -->
    <Color x:Key="BrandSecondaryColor">#A68B71</Color>
    <!-- Mocha -->
    <Color x:Key="BrandAccentColor">#4CAF50</Color>
    <!-- CBC green -->
    <Color x:Key="BrandBackgroundColor">#FFFFFF</Color>
    <!-- True white background -->
    <Color x:Key="BrandSurfaceColor">#F0F0F0</Color>
    <!-- Light neutral surface -->
    <Color x:Key="BrandButtonColor">#6B4C3B</Color>
    <!-- Match primary for buttons -->
    <Color x:Key="BrandButtonForeground">#FFFFFF</Color>
    <!-- White text for buttons -->


    <!-- SolidColorBrushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource BrandPrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource BrandSecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource BrandAccentColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BrandBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource BrandSurfaceColor}"/>
    <SolidColorBrush x:Key="GrayBrush" Color="#757575"/>

    <!-- NEW: Buttons -->
    <SolidColorBrush x:Key="BrandButtonBrush" Color="{StaticResource BrandPrimaryColor}"/>
    <SolidColorBrush x:Key="BrandButtonForegroundBrush" Color="White"/>

    <!-- 🔤 Typography -->
    <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>

    <!-- Headings and Text Styles -->
    <Style x:Key="Heading1TextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
    </Style>

    <Style x:Key="Heading2TextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource GrayBrush}"/>
    </Style>

    <Style x:Key="BodyTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style x:Key="CaptionTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="Gray"/>
    </Style>

    <!-- 🧩 Buttons -->
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="Background" Value="{StaticResource BrandButtonBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource BrandButtonForegroundBrush}"/>
        <Setter Property="Padding" Value="10 5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="Button" x:Key="SecondaryButton">
        <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="10 5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- 🗂️ DataGrid -->
    <Style TargetType="DataGrid" x:Key="BrandDataGrid">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="RowBackground" Value="White"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="VerticalGridLinesBrush" Value="{StaticResource PrimaryBrush}"/>
    </Style>
    
    <!-- Group Box-->
    <Style TargetType="GroupBox" x:Key="BrandedGroupBox">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Margin" Value="0 0 0 20"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" 
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource GrayBrush}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 🗂️ TabControl -->
    <Style TargetType="TabControl" x:Key="BrandTabControl">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="Background" Value="White"/>
    </Style>

</ResourceDictionary>
