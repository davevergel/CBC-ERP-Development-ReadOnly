<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 🎨 Brand Colors (Light Mode) -->
    <Color x:Key="BrandPrimaryColor">#6B4C3B</Color>
    <!-- Deep espresso -->
    <Color x:Key="BrandSecondaryColor">#A68B71</Color>
    <!-- Mocha -->
    <Color x:Key="BrandAccentColor">#4CAF50</Color>
    <!-- CBC green -->
    <Color x:Key="BrandBackgroundColor">#FFFFFF</Color>
    <!-- True white background -->
    <Color x:Key="BrandSurfaceColor">#F0F0F0</Color>
    <!-- Light neutral surface -->
    <Color x:Key="BrandButtonColor">#6B4C3B</Color>
    <!-- Match primary for buttons -->
    <Color x:Key="BrandButtonForeground">#FFFFFF</Color>
    <!-- White text for buttons -->


    <!-- SolidColorBrushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource BrandPrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource BrandSecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource BrandAccentColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BrandBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource BrandSurfaceColor}"/>
    <SolidColorBrush x:Key="GrayBrush" Color="#757575"/>
    <!-- Border Background and Color -->
    <SolidColorBrush x:Key="BorderBackgroundBrush" Color="#FFF7F4F2"/>
    <!-- Light mocha-tinted background -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BrandPrimaryColor}"/>

    <!-- NEW: Buttons -->
    <SolidColorBrush x:Key="BrandButtonBrush" Color="{StaticResource BrandPrimaryColor}"/>
    <SolidColorBrush x:Key="BrandButtonForegroundBrush" Color="White"/>

    <!-- 🔤 Typography -->
    <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>

    <!-- Headings and Text Styles -->
    <Style x:Key="Heading1TextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
    </Style>

    <Style x:Key="Heading2TextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource BackgroundBrush}"/>
    </Style>

    <Style x:Key="Heading3TextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <Style x:Key="HeadingTotalTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <Style x:Key="BodyTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style x:Key="CaptionTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <!-- 🧩 Buttons -->
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="Background" Value="{StaticResource BrandButtonBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource BrandButtonForegroundBrush}"/>
        <Setter Property="Padding" Value="10 5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="Button" x:Key="SecondaryButton">
        <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="10 5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- ComboBox-->
    <Style x:Key="BrandedComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>


    <!-- DatePicker -->
    <Style x:Key="BrandedDatePicker" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignDatePicker}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkBrush}" />
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- 🗂️ DataGrid -->
    <Style TargetType="DataGrid" x:Key="BrandDataGrid">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="RowBackground" Value="White"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBrush}"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="VerticalGridLinesBrush" Value="{StaticResource PrimaryBrush}"/>
    </Style>
    
    <!-- Group Box-->
    <Style TargetType="GroupBox" x:Key="BrandedGroupBox">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Margin" Value="0 0 0 20"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" 
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource SecondaryBrush}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Border -->
    <Style TargetType="Border" x:Key="BrandedBorder">
        <Setter Property="Background" Value="{StaticResource BorderBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- 🗂️ TabControl -->
    <Style TargetType="TabControl" x:Key="BrandTabControl">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <!-- 🗂️ TabItem -->
    <Style TargetType="TabItem" x:Key="BrandedTabItem">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Background" Value="#FFF7F4F2" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"
                        Padding="{TemplateBinding Padding}"
                        Margin="{TemplateBinding Margin}">
                        <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource BackgroundBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#888"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
