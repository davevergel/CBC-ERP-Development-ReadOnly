<UserControl x:Class="CbcRoastersErp.Views.HR.InterviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Interviews" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Interviews}" SelectedItem="{Binding SelectedInterview}" AutoGenerateColumns="False" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding InterviewDate}" Width="150"/>
                <DataGridTextColumn Header="Interviewer" Binding="{Binding Interviewer}" Width="150"/>
                <DataGridTextColumn Header="Outcome" Binding="{Binding Outcome}" Width="100"/>
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Header="Interview Details" Grid.Row="2" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Date:" Width="100"/>
                    <TextBox Text="{Binding SelectedInterview.InterviewDate}" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Interviewer:" Width="100"/>
                    <TextBox Text="{Binding SelectedInterview.Interviewer}" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Outcome:" Width="100"/>
                    <ComboBox SelectedItem="{Binding SelectedInterview.Outcome}" Width="200">
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Passed"/>
                        <ComboBoxItem Content="Failed"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Notes:" Width="100"/>
                    <TextBox Text="{Binding SelectedInterview.Notes}" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
                    <Button Content="Load" Command="{Binding LoadCommand}" Width="75" Margin="5"/>
                    <Button Content="Add" Command="{Binding AddCommand}" Width="75" Margin="5"/>
                    <Button Content="Update" Command="{Binding UpdateCommand}" Width="80" Margin="5"/>
                    <Button Content="Delete" Command="{Binding DeleteCommand}" Width="75" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>