<UserControl x:Class="CbcRoastersErp.Views.AddEditPackingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesignPaper}"
             Padding="20">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Form -->
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <Image Source="/Views/CBC_Logo_500x500.png"
                   Width="50"
                   Height="50"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
            <TextBlock Grid.Row="0"
                       Text="{Binding Path=PackingMaterial.MaterialID, Converter={StaticResource NullOrZeroToAddEditTitleConverter}, ConverterParameter=Packing Material}"
                       Style="{StaticResource Heading2TextBlock}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="10"/>
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="10">

            <TextBox Text="{Binding PackingMaterial.MaterialName, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Material Name"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Width="300"/>

            <TextBox Text="{Binding PackingMaterial.StockLevel, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Stock Level"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Width="300"/>

            <TextBox Text="{Binding PackingMaterial.Unit, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Unit (e.g. pcs, lbs)"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Width="300"/>

            <DatePicker SelectedDate="{Binding PackingMaterial.LastUpdated, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Hint="Last Updated"
                        Style="{StaticResource MaterialDesignDatePicker}"
                        Width="300"/>

        </StackPanel>

        <!-- Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource SecondaryButton}"
                    Width="100"/>
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource SecondaryButton}"
                    Width="100"/>
        </StackPanel>

    </Grid>
</UserControl>
