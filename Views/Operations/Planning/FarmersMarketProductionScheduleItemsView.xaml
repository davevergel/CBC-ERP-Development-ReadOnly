<UserControl x:Class="CbcRoastersErp.Views.Operations.Planning.FarmersMarketProductionScheduleItemsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CbcRoastersErp.Views.Operations.Planning"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition/>
            <!-- Grid -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
            <Image Source="/Views/CBC_Logo_500x500.png"
                   Width="50"
                   Height="50"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
            <Button Command="{Binding NavigateBackCommand}" Style="{StaticResource SecondaryButton}">
                <materialDesign:PackIcon Kind="ArrowLeft" />
            </Button>
            <TextBlock Style="{StaticResource Heading1TextBlock}" Text="Scheduled Items" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="30,0,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Data Grid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding ScheduleItems}"
                  SelectedItem="{Binding SelectedItem}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Style="{StaticResource BrandDataGrid}"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="2*"/>
                <DataGridTextColumn Header="Usage Type" Binding="{Binding UsageType}" Width="1*"/>
                <DataGridTextColumn Header="Planned Qty" Binding="{Binding PlannedQuantity}" Width="1*"/>
                <DataGridTextColumn Header="Produced Qty" Binding="{Binding ActualProducedQuantity}" Width="1*"/>
                <DataGridTextColumn Header="Roast Date" Binding="{Binding RoastDate, StringFormat=d}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination + Command Bar -->
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Previous" Command="{Binding PageChangedCommand}" CommandParameter="Previous" Margin="5"
                        Style="{StaticResource SecondaryButton}"/>
                <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center" Margin="10,0"/>
                <TextBlock Text=" / " VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center" Margin="10,0"/>
                <Button Content="Next" Command="{Binding PageChangedCommand}" CommandParameter="Next" Margin="5"
                        Style="{StaticResource SecondaryButton}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Add Item" Command="{Binding AddItemCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                <Button Content="Edit Item" Command="{Binding EditItemCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                <Button Content="Delete Item" Command="{Binding DeleteItemCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
