<UserControl x:Class="CbcRoastersErp.Views.Operations.Planning.FarmersMarketProductionScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CbcRoastersErp.Views.Operations.Planning" xmlns:planning="clr-namespace:CbcRoastersErp.ViewModels.Operations.Planning" d:DataContext="{d:DesignInstance Type=planning:FarmersMarketProductionScheduleViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <DockPanel Margin="0,0,0,10" >
            <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,10">
                <Image Source="/Views/CBC_Logo_500x500.png"
                   Width="50" Height="50"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   DockPanel.Dock="Left"/>
                <Button Command="{Binding NavigateBackCommand}" Style="{StaticResource MaterialDesignFlatButton}">
                    <materialDesign:PackIcon Kind="ArrowLeft" />
                </Button>
                <TextBlock Text="Farmers Market Production Schedule"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Style="{StaticResource Heading1TextBlock}"
                       Margin="10,0,0,0"/>
            </StackPanel>
        </DockPanel>

        <!-- Main Content -->
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Add/Edit Schedule" Command="{Binding OpenAddEditScheduleCommand }" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                <Button Content="Add Item" Command="{Binding AddItemCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                <Button Content="Mark Produced" Command="{Binding MarkProducedCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                <Button Content="View Items" Command="{Binding OpenScheduleItemsCommand}" Style="{StaticResource PrimaryButton}"
        Margin="0,0,10,0" /> 
                <Button Content="Delete Schedule" Command="{Binding DeleteScheduleCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                <Button Content="Back" Command="{Binding NavigateBackCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0" />
            </StackPanel>

            <DataGrid ItemsSource="{Binding Schedules}"
                      SelectedItem="{Binding SelectedSchedule}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Style="{StaticResource BrandDataGrid}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Market Date" Binding="{Binding MarketDate, StringFormat=d}" Width="*" />
                    <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="2*" />
                    <DataGridTemplateColumn Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="View Items"
                                        Command="{Binding DataContext.OpenScheduleItemsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>                
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Previous" Command="{Binding PageChangedCommand}" CommandParameter="Previous"
            Style="{StaticResource SecondaryButton}" Margin="5"/>
                <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center" Margin="10,0"/>
                <TextBlock Text=" / " VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center" Margin="10,0"/>
                <Button Content="Next" Command="{Binding PageChangedCommand}" CommandParameter="Next"
            Style="{StaticResource SecondaryButton}" Margin="5"/>
            </StackPanel>

        </StackPanel>
    </Grid>

</UserControl>
