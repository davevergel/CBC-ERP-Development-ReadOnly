<UserControl x:Class="CbcRoastersErp.Views.ProductionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CbcRoastersErp.Views"
             xmlns:vm="clr-namespace:CbcRoastersErp.ViewModels"
             mc:Ignorable="d" 
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.DataContext>
        <vm:ProductionViewModel />
    </UserControl.DataContext>

    <Grid Background="#f8f9fa">
        <DockPanel LastChildFill="True">
            <!-- Header -->
            <Border Style="{StaticResource BrandedBorder}" Padding="20" DockPanel.Dock="Top">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Image Source="/Views/CBC_Logo_500x500.png"
                   Width="50" Height="50"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   DockPanel.Dock="Left"/>
                    <TextBlock Text="Production Management"
                               Style="{StaticResource Heading1TextBlock}"
                               HorizontalAlignment="Center"
                               Margin="30,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Pagination Controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                Margin="10" DockPanel.Dock="Bottom">
                <Button Content="Previous" Command="{Binding PageChangedCommand}" 
                        CommandParameter="Previous"
                        Style="{StaticResource SecondaryButton}"
                        IsEnabled="{Binding CurrentPage, Converter={StaticResource IsGreaterThanOneConverter}}"
                        Margin="0,0,5,0" />
                <Button Content="Next"
                        Margin="0,0,5,0"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding PageChangedCommand}">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource IsLessThanTotalPagesConverter}">
                            <Binding Path="CurrentPage"/>
                            <Binding Path="TotalPages"/>
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
            </StackPanel>

            <!-- Scrollable Content -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Top">
                    <Button Content="Back to Dashboard"
                            Command="{Binding NavigateBackCommand}"
                            Style="{StaticResource SecondaryButton}"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,10"/>
                    <TabControl Style="{StaticResource BrandTabControl}">
                        <TabItem Style="{StaticResource BrandedTabItem}" Header="Batch Roasting">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Button Content="Add/Edit Batch"
                                        Command="{Binding OpenAddEditBatchCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                         Margin="0,0,170,0"
                                        HorizontalAlignment="Right"
                                        Width="150"/>
                                <Button Content="Delete Batch" 
                                        Command="{Binding DeleteBatchCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        HorizontalAlignment="Right"
                                        Width="150" Margin="10,0,10,0" />
                                <DataGrid Style="{StaticResource BrandDataGrid}" ItemsSource="{Binding RoastBatches}"
                                          SelectedItem="{Binding SelectedBatch}"
                                          AutoGenerateColumns="False"
                                          Grid.Row="1"
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Batch 10#" Binding="{Binding BatchNumber}" />
                                        <DataGridTextColumn Header="Roast Date" Binding="{Binding RoastDate}" />
                                        <DataGridTextColumn Header="Batch Size" Binding="{Binding BatchSize}" />
                                        <DataGridTextColumn Header="Finished Good" Binding="{Binding FinishedGoodName}" />
                                        <DataGridTextColumn Header="Roast Profile" Binding="{Binding ProfileName}" />
                                        <DataGridTextColumn Header="Roast Level" Binding="{Binding RoastLevel}" />
                                        <DataGridTextColumn Header="Production Date" Binding="{Binding ProductionDate}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <!-- Future Tabs-->
                    </TabControl>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
