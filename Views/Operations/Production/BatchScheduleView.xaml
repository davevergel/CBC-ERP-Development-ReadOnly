<UserControl x:Class="CbcRoastersErp.Views.BatchScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CbcRoastersErp.Views"
             xmlns:vm="clr-namespace:CbcRoastersErp.ViewModels" d:DataContext="{d:DesignInstance Type=vm:BatchScheduleViewModel}"
             mc:Ignorable="d" 
             Background="{DynamicResource BackgroundBrush}"
             d:DesignHeight="500" d:DesignWidth="800">

    <DockPanel>
        <!-- Header -->
        <Border Padding="20" 
                DockPanel.Dock="Top"
                Style="{StaticResource BrandedBorder}">
            <StackPanel Orientation="Horizontal" Margin="10">
                <!-- Logo -->
                <Image Source="/Views/CBC_Logo_500x500.png"
                           Width="50" Height="50"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           DockPanel.Dock="Left"/>
                <TextBlock Text="Batch Scheduling"
                           Style="{StaticResource Heading1TextBlock}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="30,0,0,0"
                           FontSize="22" FontWeight="SemiBold" />
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right" DockPanel.Dock="Top">
            <Button Content="Start Roast"
                    Command="{Binding StartRoastCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Width="150"/>
            <Button Content="Mark As Completed" 
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding CompleteRoastCommand}" 
                    Width="150" />
            <Button Content="Add/Edit Schedule" Margin="5"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding OpenAddEditScheduleCommand}"/>

            <Button Content="Delete Schedule" Margin="5"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding DeleteScheduleCommand}" />

            <Button Content="Assign to Batch" Margin="5"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding AssignToBatchCommand}" />

            <Button Content="Back to Dashboard" Margin="5"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding NavigateBackCommand}" />
        </StackPanel>

        <!-- Schedule Grid -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <DataGrid ItemsSource="{Binding Schedules}"
                      SelectedItem="{Binding SelectedSchedule}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Style="{StaticResource BrandDataGrid}"
                      Margin="10"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Schedule ID" Binding="{Binding ScheduleID}" />
                    <DataGridTextColumn Header="Order ID" Binding="{Binding BigCommerceID}" />
                    <DataGridTextColumn Header="Product Name" Binding="{Binding FinishedGoodName}" />
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" />
                    <DataGridTextColumn Header="Scheduled Date" Binding="{Binding ScheduledDate, StringFormat={}{0:MM/dd/yyyy}}" />
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                    <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </DockPanel>

</UserControl>
