<UserControl x:Class="CbcRoastersErp.Views.AddEditBatchScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CbcRoastersErp.Views"
             xmlns:vm="clr-namespace:CbcRoastersErp.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F5F5F5" Margin="20">
        <materialDesign:Card Padding="20" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="#2c3e50" Padding="20" DockPanel.Dock="Top">
                    <TextBlock Text="Batch Schedule" Foreground="White" FontSize="22" FontWeight="SemiBold" />
                </Border>

                <StackPanel Grid.Row="1" Margin="0 10" VerticalAlignment="Top" >
                    <TextBox Text="{Binding Schedule.OrderID}" 
                             materialDesign:HintAssist.Hint="Order ID"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    <ComboBox ItemsSource="{Binding FinishedGoodsList}"
                              SelectedValue="{Binding Schedule.FinishedGoodID, Mode=TwoWay}"
                              SelectedValuePath="FinishedGoodID"
                              DisplayMemberPath="ProductName"
                              materialDesign:HintAssist.Hint="Finished Good"
                              Margin="0,0,0,10"/>
                    <TextBox Text="{Binding Schedule.Quantity}" 
                             materialDesign:HintAssist.Hint="Quantity"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    <DatePicker SelectedDate="{Binding Schedule.ScheduledDate}" 
                                materialDesign:HintAssist.Hint="Scheduled Date"
                                Margin="0 5"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0" >
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}" />
                    <Button Content="Save"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
