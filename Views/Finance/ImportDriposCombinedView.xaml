<UserControl x:Class="CbcRoastersErp.Views.Finance.ImportDriposCombinedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CbcRoastersErp.Views.Finance"
             xmlns:vm="clr-namespace:CbcRoastersErp.ViewModels.Finance"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Import Dripos Sales &amp; Metrics"
                   FontSize="20" FontWeight="Bold"
                   Foreground="#003366"
                   HorizontalAlignment="Center" Margin="0 0 0 10"/>

        <!-- Filter box -->
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox Width="200"
                     Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Filter by Date or Amount..." />
            <Button Content="Apply Filter"
                    Command="{Binding ApplyFilterCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
        </StackPanel>

        <!-- Journal Entry Preview -->
        <GroupBox Header="Journal Entry Preview (Product Sales)" Grid.Row="2" Margin="0 10 0 10">
            <DataGrid ItemsSource="{Binding FilteredJournalPreview}"
                      SelectedItem="{Binding SelectedJournalRow}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" SortMemberPath="Date"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="*" SortMemberPath="Amount"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        
        <!-- Loading Spinner -->      
        <GroupBox Header="Import Progress" Margin="0 30 0 10" 
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <ProgressBar IsIndeterminate="True" 
                             Height="8" 
                             Width="400"
                             Foreground="{DynamicResource PrimaryHueMidBrush}" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center" />
            </Grid>
        </GroupBox>

        <!-- Metrics Preview -->
        <GroupBox Header="Metrics Preview (Tips, Tax, Delivery, etc.)" Grid.Row="3" Margin="0 10 0 10">
            <DataGrid ItemsSource="{Binding MetricsPreview}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" SortMemberPath="Date"/>
                    <DataGridTextColumn Header="Metric" Binding="{Binding Metric}" Width="2*" SortMemberPath="Metric"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="*" SortMemberPath="Amount"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">

            <Button Content="🗑 Remove Selected"
                    Command="{Binding DeleteSelectedCommand}"
                    IsEnabled="{Binding SelectedJournalRow, Converter={StaticResource NullToBoolConverter}}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button Content="↩ Undo"
                    Command="{Binding UndoDeleteCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button Content="✅ Import Journal Entries"
                    Command="{Binding ImportCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button Content="💾 Save Journal to DB"
                    Command="{Binding SaveJournalToDbCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button Content="💾 Save Metrics to DB"
                    Command="{Binding SaveMetricsToDbCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button Content="⬇ Export Journal"
                    Command="{Binding ExportJournalCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button Content="⬇ Export Metrics"
                    Command="{Binding ExportMetricsCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button Content="📂 Load CSV"
                    Command="{Binding LoadCsvCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button Content="↩ Back"
                    Command="{Binding NavigateBackCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}" />
        </StackPanel>
    </Grid>

</UserControl>
