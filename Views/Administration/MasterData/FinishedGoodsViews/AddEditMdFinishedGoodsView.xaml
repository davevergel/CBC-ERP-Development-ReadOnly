<UserControl x:Class="CbcRoastersErp.Views.Administration.MasterData.FinishedGoodsViews.AddEditMdFinishedGoodsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CbcRoastersErp.Views.Administration.MasterData.FinishedGoodsViews"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesignPaper}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20">
            <Border Background="{DynamicResource PrimaryBrush}" Padding="20" >
                <StackPanel Orientation="Horizontal" Margin="10">
                    <!-- Logo -->
                    <Image Source="/Views/CBC_Logo_500x500.png"
                           Width="50" Height="50"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           DockPanel.Dock="Left"/>
                    <!-- Header Title-->
                    <TextBlock Text="Finished Goods Details" Style="{StaticResource Heading1TextBlock}"
                               Margin="30"
                               FontSize="22" 
                               FontWeight="SemiBold" 
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
            <TextBlock Text="Product Name" Padding="10"/>
            <TextBox Text="{Binding FinishedGood.ProductName}" Width="300"/>
            <TextBlock Text="BigCommerce Product ID" Padding="10" />
            <TextBox Text="{Binding FinishedGood.BigCommProdID}" Width="300"/>

            <TextBlock Text="Quantity" Padding="10" />
            <TextBox Text="{Binding FinishedGood.StockLevel}" Width="300"/>

            <TextBlock Text="Roasting Profile" Padding="10"/>
            <ComboBox ItemsSource="{Binding RoastingProfilesList}"
                      SelectedItem="{Binding SelectedRoastingProfile}"
                      DisplayMemberPath="ProfileName"
                      SelectedValuePath="ProfileID"
                      Width="300"/>
            <TextBlock Text="Roast Level" Padding="10" />
            <TextBox Text="{Binding FinishedGood.RoastLevel}" Width="300"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Save" Style="{StaticResource PrimaryButton}" Command="{Binding SaveCommand}" Width="100" Margin="5"/>
                <Button Content="Cancel" Style="{StaticResource SecondaryButton}" Command="{Binding CancelCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
