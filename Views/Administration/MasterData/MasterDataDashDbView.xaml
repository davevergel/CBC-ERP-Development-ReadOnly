<UserControl x:Class="CbcRoastersErp.Views.Administration.MasterData.MasterDataDashDbView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CbcRoastersErp.Views.Administration.MasterData"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource BackgroundBrush}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer>
            <StackPanel Margin="30" VerticalAlignment="Top">

                <!-- Header with logo -->
                <DockPanel Margin="0 0 0 20">
                    <Image Source="/Views/CBC_Logo_500x500.png"
                           Width="50" Height="50"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           DockPanel.Dock="Left"/>
                    <TextBlock Text="Master Data"
                               Style="{StaticResource Heading1TextBlock}"
                               VerticalAlignment="Center"
                               Margin="20 0 0 0"/>
                </DockPanel>

                <!-- Back to Dashboard -->
                <Button Content="Back to Dashboard"
                        Command="{Binding NavigateBackCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Width="180"
                        Margin="0 0 0 20"
                        HorizontalAlignment="Left"/>

                <!-- Operations Master Data -->
                <GroupBox Header="Operations Master Data" Style="{StaticResource BrandedGroupBox}">
                    <WrapPanel Margin="10" ItemHeight="130" ItemWidth="250">

                        <!-- Finished Goods -->
                        <materialDesign:Card Margin="10">
                            <Button Style="{StaticResource PrimaryButton}" Command="{Binding NavigateToManageFinishedGoodsCommand}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0 0 0 4">
                                        <materialDesign:PackIcon Kind="Cube" Width="24" Margin="0 0 8 0"/>
                                        <TextBlock Text="Finished Goods" Style="{StaticResource Heading2TextBlock}"/>
                                    </StackPanel>
                                    <TextBlock Text="Manage inventory items" Style="{StaticResource CaptionTextBlock}"/>
                                </StackPanel>
                            </Button>
                        </materialDesign:Card>

                        <!-- Roasting Profiles -->
                        <materialDesign:Card Margin="10">
                            <Button Style="{StaticResource PrimaryButton}" Command="{Binding NavigateToManageRoastingProfilesCommand}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0 0 0 4">
                                        <materialDesign:PackIcon Kind="CoffeeMaker" Width="24" Margin="0 0 8 0"/>
                                        <TextBlock Text="Roasting Profiles" Style="{StaticResource Heading2TextBlock}"/>
                                    </StackPanel>
                                    <TextBlock Text="Manage roasting profiles" Style="{StaticResource CaptionTextBlock}"/>
                                </StackPanel>
                            </Button>
                        </materialDesign:Card>

                    </WrapPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
