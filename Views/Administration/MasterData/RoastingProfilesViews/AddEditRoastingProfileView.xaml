<UserControl x:Class="CbcRoastersErp.Views.Administration.MasterData.RoastingProfilesViews.AddEditRoastingProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CbcRoastersErp.Views.Administration.MasterData.RoastingProfilesViews"
             xmlns:vm="clr-namespace:CbcRoastersErp.ViewModels.Administration.MasterData.RoastingProfilesViewModels"
             Background="{DynamicResource MaterialDesignPaper}"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">    
    
    <Grid>
        <StackPanel Margin="20">
            <Border Background="{DynamicResource PrimaryBrush}" Padding="10">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <!-- Logo -->
                    <Image Source="/Views/CBC_Logo_500x500.png"
                           Width="50" Height="50"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           DockPanel.Dock="Left"/>
                    <!-- Header Title-->
                    <TextBlock Text="FRoasting Profile Details" Style="{StaticResource Heading1TextBlock}"
                               Margin="30"
                               FontSize="22" 
                               FontWeight="SemiBold" 
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
            
            <!--Input Fields for Roasting Profile-->
            <TextBlock Text="Profile Name" Padding="10"/>
            <TextBox Text="{Binding RoastingProfile.ProfileName}" Width="300"/>
            
            <TextBlock Text="Description" Padding="10"/>
            <TextBox Text="{Binding RoastingProfile.Description}" Width="300"/>

            <TextBlock Text="Green Coffee" Padding="10" />
            <ComboBox ItemsSource="{Binding GreenCoffeeList}"
                      SelectedItem="{Binding SelectedGreenCoffee}"
                      DisplayMemberPath="CoffeeName"
                      SelectedValuePath="GreenCoffeeID"
                      Width="300"/>

            <TextBlock Text="Roast Level" Padding="10"/>
            <TextBox Text="{Binding RoastingProfile.RoastLevel}" Width="300"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Save" Style="{StaticResource PrimaryButton}" Command="{Binding SaveCommand}" Width="100" Margin="5"/>
                <Button Content="Cancel" Style="{StaticResource SecondaryButton}" Command="{Binding CancelCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
