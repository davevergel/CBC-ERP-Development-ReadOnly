<UserControl x:Class="CbcRoastersErp.Views.Administration.MasterData.RoastingProfilesViews.ManageRoastingProfilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CbcRoastersErp.Views.Administration.MasterData.RoastingProfilesViews"
             xmlns:vm="clr-namespace:CbcRoastersErp.ViewModels.Administration.MasterData.RoastingProfilesViewModels"
             Background="{DynamicResource BackgroundBrush}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ManageRoastingProfilesViewModel/>
    </UserControl.DataContext>

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid Margin="20">
            <Grid.Resources>
                <!-- Highlight selected row -->
                <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}" />
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <materialDesign:Card Padding="20" Margin="10">
                <StackPanel Margin="0,0,0,2">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <!-- Logo -->
                        <Image Source="/Views/CBC_Logo_500x500.png"
                           Width="50" Height="50"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           DockPanel.Dock="Left"/>
                        <!-- Title -->
                        <TextBlock Text="Roasting Profiles"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Style="{StaticResource Heading1TextBlock}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="30 0 0 0"/>
                    </StackPanel>

                    <!-- Data Table -->
                    <DataGrid ItemsSource="{Binding RoastingProfiles}"
                              SelectedItem="{Binding SelectedRoastingProfile, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              RowHeight="40"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              Style="{StaticResource BrandDataGrid}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              CanUserReorderColumns="True"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True"
                              Height="400" 
                              Margin="0 0 0 20">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Profile Name" Binding="{Binding ProfileName}" Width="*"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                            <DataGridTextColumn Header="Green Coffee" Binding="{Binding GreenCoffeeName}" Width="200"/>
                            <DataGridTextColumn Header="Roast Level" Binding="{Binding RoastLevel}" Width="150"/>
                            <DataGridTextColumn Header="Temprature" Binding="{Binding Temperature}" Width="150"  />
                            <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="200" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Pagination -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Margin="0,20,0,0" >
                        <Button Content="Previous" Command="{Binding PageChangedCommand}"
                                CommandParameter="Previous"
                                Style="{StaticResource SecondaryButton}"
                                IsEnabled="{Binding CurrentPage, Converter={StaticResource IsGreaterThanOneConverter}}" />
                        <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center" Padding="10" FontWeight="SemiBold"/>
                        <TextBlock Text="of" VerticalAlignment="Center" Margin="5,0" />
                        <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center" FontWeight="SemiBold" Padding="10"/>
                        <Button Content="Next"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding PageChangedCommand}" CommandParameter="Next">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource IsLessThanTotalPagesConverter}"
>
                                    <Binding Path="CurrentPage"/>
                                    <Binding Path="TotalPages"/>
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Add/Edit" Style="{StaticResource SecondaryButton}" Command="{Binding AddEditRoastingProfileCommand}" 
                        Margin="10" Padding="20,6"/>
                        <Button Content="Delete" Command="{Binding DeleteRoastingProfileCommand }" 
                        Margin="10" Padding="20,6" Background="Red" Foreground="White"/>
                        <Button Content="Back to Dashboard" Style="{StaticResource SecondaryButton}" Command="{Binding NavigateBackCommand}" 
                        Margin="10" Padding="20,6"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </materialDesign:DialogHost>
</UserControl>
