<UserControl x:Class="CbcRoastersErp.Views.UserManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CbcRoastersErp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#f8f9fa">
        <DockPanel LastChildFill="True">
            <!-- Header -->
            <Border Background="#2c3e50" Padding="20" DockPanel.Dock="Top">
                <TextBlock Text="User/Roles Management" Foreground="White"
                           FontSize="22" FontWeight="SemiBold" />
            </Border>

            <!-- Scrollable Content -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Top">
                    <Button Content="Back to Dashboard"
                            Command="{Binding NavigateBackCommand}"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,10"/>
                    <TabControl Padding="1">
                        <TabItem Header="User Management">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Button Content="Add/Edit User"
                                        Command="{Binding OpenAddEditUserCommand}"
                                         Margin="0,0,125,0"
                                        HorizontalAlignment="Right"
                                        Width="100"/>
                                <Button Content="Delete User" 
                                        Command="{Binding DeleteUserCommand}"
                                        HorizontalAlignment="Right"
                                        Width="100" Margin="0,0,10,0" />
                                
                                <DataGrid ItemsSource="{Binding Users}"
                                          SelectedItem="{Binding SelectedUser}"
                                          Padding="5"
                                          AutoGenerateColumns="False"
                                          Grid.Row="1"
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="User ID" Binding="{Binding UserId}" />
                                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" />
                                        <DataGridTextColumn Header="Role" Binding="{Binding RoleName}" />
                                        <DataGridTextColumn Header="Status" Binding="{Binding IsActive}" />
                                        <DataGridTextColumn Header="Last Login" Binding="{Binding DateLastLogin}" />
                                        <DataGridTextColumn Header="Created On" Binding="{Binding DateCreated}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <!-- Future Tabs-->
                        <!--Roles Managemetn Tab-->
                        <TabItem Header="Roles Management">
                            <Grid>
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                                        <Button Content="Add/Edit Role" Command="{Binding OpenAddEditRoleCommand}" Margin="0,0,10,0"/>
                                        <Button Content="Delete Role" Command="{Binding DeleteRoleCommand}" />
                                    </StackPanel>
                                    <DataGrid ItemsSource="{Binding Roles}" SelectedItem="{Binding SelectedRole}" AutoGenerateColumns="False">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Role" Binding="{Binding RoleName}" />
                                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                                            <DataGridTextColumn Header="Permission" Binding="{Binding PermissionLevel}" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
